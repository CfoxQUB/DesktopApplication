                        <GridViewColumn Width="120" DisplayMemberBinding="{Binding EventTitle}" Header="Friday" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView Name="SaturdayEvents" HorizontalAlignment="Left" Margin="798,81,0,0" BorderThickness="0.5" VerticalAlignment="Top" Height="410" Width="126">
            <ListView.View>
                <GridView>
                        <GridViewColumn Width="120" DisplayMemberBinding="{Binding EventTitle}" Header="Saturday" />
                </GridView>
            </ListView.View>
        </ListView>
  


    <Label Content="Building:" Margin="340,29,571,479" RenderTransformOrigin="-38.4,-10.7"/>
        <ComboBox Name="BuildingSelect" HorizontalAlignment="Left" Margin="406,34,0,0" VerticalAlignment="Top" Width="143" Background="{x:Null}"/>
        <Label Content="Room:" Margin="630,29,293,485" RenderTransformOrigin="-38.4,-10.7"/>
            <ComboBox Name="RoomSelect" HorizontalAlignment="Left" Margin="701,34,0,0" VerticalAlignment="Top" Width="143" Background="{x:Null}"/>
            <DatePicker Name="DateSelected" HorizontalAlignment="Left" Margin="50,34,0,0" VerticalAlignment="Top" Height="27" Width="172" SelectedDateChanged="Datechanged"/>
    </Grid>
    </Viewbox>
</Window>

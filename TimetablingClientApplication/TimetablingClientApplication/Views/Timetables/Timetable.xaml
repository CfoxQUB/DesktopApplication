<Window x:Class="TimetablingClientApplication.Timetable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Timetable" Height="584" Width="1034" WindowStartupLocation="CenterScreen">
    <Viewbox Stretch="UniformToFill">
    <Grid Width="987" Height="550">

                <MenuItem Header="_New Event" Click="MenuItem_NewEvent_Click">
                    <MenuItem.Icon>
                        <Image />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Edit Event" Click="MenuItem_EditEvent_Click">
                    <MenuItem.Icon>
                        <Image />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Delete Event">
                    <MenuItem.Icon>
                        <Image />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_View All Events">
                    <MenuItem.Icon>
                        <Image />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Cut" Command="Cut">
                    <MenuItem.Icon>
                        <Image/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Copy" Command="Copy">
                    <MenuItem.Icon>
                        <Image  />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Paste" Command="Paste">
                    <MenuItem.Icon>
                        <Image />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Timetables" Click="Menuitem_TimetableView_Click">
                    <MenuItem.Icon>
                        <Image />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Events">
                    <MenuItem.Icon>
                        <Image />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Database">
                    <MenuItem.Icon>
                        <Image />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Window" />
            <MenuItem Header="_Help" />
        </Menu>
        <ListView Name="SundayEvents" HorizontalAlignment="Left" Margin="50,81,0,0" BorderThickness="0.5" VerticalAlignment="Top" Height="410" Width="125">
            <ListView.View>
                <GridView>
                        <GridViewColumn Width="120" DisplayMemberBinding="{Binding EventTitle}" Header="Sunday" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView Name="MondayEvents" HorizontalAlignment="Left" Margin="175,81,0,0" BorderThickness="0.5" VerticalAlignment="Top" Height="410" Width="125">
            <ListView.View>
                <GridView>
                        <GridViewColumn Width="120" DisplayMemberBinding="{Binding EventTitle}" Header="Monday" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView Name="TuesdayEvents" HorizontalAlignment="Left" Margin="300,81,0,0" BorderThickness="0.5" VerticalAlignment="Top" Height="410" Width="124">
            <ListView.View>
                <GridView>
                        <GridViewColumn Width="120" DisplayMemberBinding="{Binding EventTitle}" Header="Tuesday" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView Name="WednesdayEvents" HorizontalAlignment="Left" Margin="424,81,0,0" BorderThickness="0.5" VerticalAlignment="Top" Height="410" Width="125">
            <ListView.View>
                <GridView>
                        <GridViewColumn Width="120" DisplayMemberBinding="{Binding EventTitle}" Header="Wednesday" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView Name="ThursdayEvents" HorizontalAlignment="Left" Margin="549,81,0,0" BorderThickness="0.5" VerticalAlignment="Top" Height="410" Width="125">
            <ListView.View>
                <GridView>
                        <GridViewColumn Width="120" DisplayMemberBinding="{Binding EventTitle}" Header="Thursday" />
                </GridView>
            </ListView.View>
        </ListView>

        <ListView Name="FridayEvents" HorizontalAlignment="Left" Margin="674,81,0,0" BorderThickness="0.5" VerticalAlignment="Top" Height="410" Width="124">
